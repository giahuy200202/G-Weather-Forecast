{
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    },
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "allowJs": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "outDir": "./dist",
        "strict": true,
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true
    },
    "include": ["**/*.ts", "**/*.d.ts", "**/*.html"],
    "exclude": ["node_modules", "grpc"],
    "files": ["./types/index.d.ts"]
}
